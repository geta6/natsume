@import url('http://fonts.googleapis.com/css?family=Roboto:400,100,700')
@import 'nib'

global-reset()

// Master
*
  box-sizing border-box

body
  font 12px/16px Helvetica, Arial, Sans-Serif
  color #333333
  -webkit-text-size-adjust 100%

input, textarea
  appearance none
  display block
  padding 10px
  width 100%
  border 1px solid #CCC
  background white

textarea
  height 100px

button
  display block
  margin 0 auto

.center
  margin 0 auto

.exterior
  width 100%

.interior
  margin 0 auto
  padding 0 10px
  width 80%

.debug
  margin-bottom 5px
  padding 0 5px
  color #A44
  background #F2F2F2
  border 1px solid #CCC
  font-family monospace

#stat
  height 20px
  font-size 10px
  line-height 20px
  span
    margin-right 10px

#head
  height 50px
  font-size 36px
  font-weight 100
  line-height 50px
  span
    margin-right 5px

#body
  padding 10px
  background #EEE
  border-top 1px solid #CCC
  border-bottom 1px solid #CCC

  a
    color #4183C4
    text-decoration none
    &:hover
      text-decoration underline
    &.absent
      color #cc0000
    &.anchor
      display block
      padding-left 30px
      margin-left -30px
      cursor pointer
      position absolute
      top 0
      left 0
      bottom 0
    &.link-internal
      color #83C441

  h1, h2, h3, h4, h5, h6
    position relative
    margin 20px 0 10px
    padding 0
    font-weight bold
    font-smoothing antialiased
    &:hover a.anchor
      background url('../../images/modules/styleguide/para.png') no-repeat 10px center
      text-decoration none
    tt, code
      font-size inherit
    p
      margin-top 0

  h1
    font-size 28px
    color black

  h2
    font-size 24px
    border-bottom 1px solid #cccccc
    color black

  h3
    font-size 18px

  h4
    font-size 16px

  h5
    font-size 14px

  h6
    color #777777
    font-size 14px

  p, blockquote, ul, ol, dl, table, pre
    margin 15px 0

  hr
    border 0 none
    background #cccccc
    height 4px
    padding 0

  & > h1:first-child
    margin-top 0
    padding-top 0
    & + h2
      margin-top 0
      padding-top 0
  & > h2:first-child
    margin-top 0
    padding-top 0
  & > h3:first-child, & > h4:first-child, & > h5:first-child, & > h6:first-child
    margin-top 0
    padding-top 0

  a:first-child
    h1, h2, h3, h4, h5, h6
      margin-top 0
      padding-top 0

  li p.first
    display inline-block

  ul
    list-style disc

  ol
    list-style decimal

  ul, ol
    padding-left 30px
    li:first-child
      margin-top 0
    li:last-child
      margin-bottom 0

  dl
    padding 0
    dt
      font-size 14px
      font-weight bold
      font-style italic
      padding 0
      margin 15px 0 5px
      &:first-child
        padding 0
      & > :first-child
        margin-top 0
      & > :last-child
        margin-bottom 0
    dd
      margin 0 0 15px
      padding 0 15px
      & > :first-child
        margin-top 0
      & > :last-child
        margin-bottom 0

  blockquote
    border-left 4px solid #dddddd
    padding 0 15px
    color #777777
    & > :first-child
      margin-top 0
    & > :last-child
      margin-bottom 0

  table
    padding 0
    tr
      border none
      background-color white
      margin 0
      padding 0
      &:nth-child(2n)
        background-color #f8f8f8
      :first-child
        margin-top 0
      :last-child
        margin-bottom 0
        border-right 1px solid #cccccc
      th
        font-weight bold
        border 1px solid #cccccc
        border-right none
        text-align left
        margin 0
        padding 6px 13px
      td
        border 1px solid #cccccc
        border-top none
        border-right none
        text-align left
        margin 0
        padding 6px 13px

  img
    max-width 100%

  code, tt
    margin 0 2px
    padding 0 5px
    //white-space nowrap
    border 1px solid #eaeaea
    background-color #f8f8f8
    border-radius 3px
    overflow auto

  pre code
    margin 0
    padding 0
    white-space pre
    border none
    background transparent

  pre
    background-color #f8f8f8
    border 1px solid #cccccc
    font-size 13px
    line-height 19px
    overflow auto
    padding 6px 10px
    border-radius 3px
    code, tt
      background-color transparent
      border none
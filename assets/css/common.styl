@import 'nib'

// Function

.pull-left
  float left

.pull-right
  float right

.tips
  position relative
  .tips
    left 50%
    margin-top -5px
    margin-left -50px
    padding 5px
    width 100px
    position absolute
    display none
    color white
    line-height 1.5em
    // font-weight bold
    border-radius 3px
    background rgba(0,0,0,.72)
    text-shadow none
    &:after
      content ' '
      position absolute
      border-bottom 6px solid rgba(0,0,0,.72)
      border-right 6px solid transparent
      border-left 6px solid transparent
      top 0
      left 50%
      margin-top -6px
      margin-left -5px
  &:hover
    .tips
      display block

// UI Elements

.container
  position relative
  margin 0 auto 25px auto
  padding 0 10px
  max-width 920px

// Bind

.bind
  position relative
  margin 0 auto
  display block

  .data
    display table
    width 100%
    table-layout fixed
    width 100%
    min-height 36px
    line-height 36px

    .each
      position relative
      display table-cell
      min-height 36px
      padding 0 10px
      overflow ellipsis
      vertical-align top

  &.stud
    box-shadow 0 0 0 3px #EEEEEE
    border-radius 1px
    .data
      border-left 1px solid #CACACA
      border-right 1px solid #CACACA
      border-bottom 1px solid #E5E5E5
      &:last-child
        border-bottom 1px solid #CACACA
      &:hover
        background-color #FFFFEE
      &.head
        min-height 42px
        line-height 42px
        border-top 1px solid #CACACA
      &.head, &.foot
        font-weight bold
        background linear-gradient(top, #FAFAFA, #EAEAEA)
        text-shadow #FFFFFF 0px 1px 0px
        border-bottom 1px solid #CACACA
        .each
          border-left 1px solid rgba(255, 255, 255, .5)
          border-right 1px solid rgba(0, 0, 0, .1)
          &:first-child
            border-left none
          &:last-child
            border-right none
          &:hover
            background-image linear-gradient(top, #FAFBFD, #DAE4EE)
          &:active
            background #DAE4EE

// List Menu

.list
  width 100%
  li
    display inline-block
    position relative
    z-index 1
    vertical-align top
    margin 0 5px
    text-align center
    &:first-child
      margin-left 0
    &:last-child
      margin-right 0
    &.title
      font-size 20px
      font-weight bold
    &.split
      width 0
      border-left 1px solid #EAEAEA
      border-right 1px solid #FCFCFC
    &.icons
      position relative
      z-index 0
      width 0
    a
      display block

// Document Style

.docs
  a
    color #3A7FC6
    &:hover
      text-decoration underline

